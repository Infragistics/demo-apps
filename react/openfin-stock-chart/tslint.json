{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "src/**/*.*",
      "src/sources/*.*",
      "src/igr/**/*.*"
    ]
  },
  "rules": {
    "no-console": false,
    "jsx-no-lambda": false,
    "ordered-imports": false,
    "max-classes-per-file": 4
  },
  "jsRules": {
    "no-console": false,
    "jsx-no-lambda": false,
    "ordered-imports": false,
    "max-classes-per-file": 4
  }
}
